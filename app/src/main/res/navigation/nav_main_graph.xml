<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.udacity.shoestore.screens.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.udacity.shoestore.screens.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_instructorsFragment"
            app:destination="@id/instructorsFragment" />
    </fragment>
    <fragment
        android:id="@+id/instructorsFragment"
        android:name="com.udacity.shoestore.screens.InstructorsFragment"
        android:label="fragment_instructions"
        tools:layout="@layout/fragment_instructions">
        <action
            android:id="@+id/action_instructorsFragment_to_shoeListFragment"
            app:destination="@id/shoeListFragment" >
            <argument
                android:name="shoe_obj" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/shoeListFragment"
        android:name="com.udacity.shoestore.screens.ShoeListFragment"
        android:label="fragment_shoe_list"
        tools:layout="@layout/fragment_shoe_list">
        <action
            android:id="@+id/action_shoeListFragment_to_shoeDetailsFragment"
            app:destination="@id/shoeDetailsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/shoeDetailsFragment2"
        android:name="com.udacity.shoestore.screens.ShoeDetailsFragment"
        android:label="fragment_shoe_adding_details"
        tools:layout="@layout/fragment_shoe_adding_details">
        <action
            android:id="@+id/action_shoeDetailsFragment2_to_shoeListFragment"
            app:destination="@id/shoeListFragment" />
    </fragment>
</navigation>